{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}